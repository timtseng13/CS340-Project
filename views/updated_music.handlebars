<html>
<h1> Add/Search Music </h1>
<h3>Add Music:</h3>
<form id="music" action="/music" method="post">
    Title: <input type="text" name="music_name"><br />
    Genre: <input type="text" name="music_artist"><br />
	Director: <input type="text" name="music_length"><br />
    <input type="submit" value="Add"><br />
</form>	
<br />
<h3>Music Data:</h3>
<form id="filter" action ="/filterMusic" method="get">
	Filter by keyword: <input type="text" name="keyword" name = "keyword" id="keyword">
	<input type ="submit" value="Search">
</form>
<form id="reset" action ="/music" method="get">
<input type ="submit" value="Reset">
</form>
<br />
<table id="music_table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Length</th>
			<th>Delete</th>
            <th>Edit</th
        </tr>
    </thead>
	
    <tbody id="music_table_body">
        {{#each music}}
        <tr>
            <td id="id" style="display:none">{{musicID}}</td>
            <td id="title">{{musicName}}</td>
            <td id="artist">{{artist}}</td>
			<td id="length">{{musicLength}}</td>
            <td id="delete"> <input type="button" value="delete" onClick="delete_row(this)"/></td>
            <td id="edit"> <input type="button" value="edit" onClick="edit_row(this)"/></td>
        </tr>
        {{/each}}
    </tbody>
</table>